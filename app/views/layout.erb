<!DOCTYPE HTML>
<html>
  <head>
    <title>Chirper</title>
  </head>

  <body>
    <h1> 'Hello Chirper!' </h1>
    <% if session[:user_id] %>
      <form action='/sessions' method='post'>
        <input type='hidden' name='_method' value='delete'>
        <input type="submit" value="Log out">
      </form>
      <% else %>
      <form action="/sessions/new" method="get">
        <input type="submit" value="Log in" />
      </form>

      <form action="/users/new" method="get">
        <input type="submit" value="Sign up" />
      </form>
      <% end %>

    <% if flash[:welcome] %>
      <div id='welcome'><%= flash[:welcome] %></div>
    <% end %>

    <% if flash[:log_out] %>
      <div id='log_out'><%= flash[:log_out] %></div>
    <% end %>

    <% if flash[:mismatch] %>
      <div id='mismatch'><%= flash[:mismatch] %></div>
    <% end %>

    <% if flash[:login_succesful] %>
      <div id='login_succesful'><%= flash[:login_succesful] %></div>
    <% end %>

    <% if flash[:login_unsuccesful] %>
      <div id='login_unsuccesful'><%= flash[:login_unsuccesful] %></div>
    <% end %>

    <% if flash[:user_exists] %>
      <div id='user_exists'><%= flash[:user_exists] %></div>
    <% end %>

  <% if flash[:new_message] %>
    <div id='new_message'><%= flash[:new_message] %></div>
  <% end %>

  <% if flash[:message_error] %>
    <div id='message_error'><%= flash[:message_error] %></div>
  <% end %>
    <%= yield %>

  </body>
</html>
