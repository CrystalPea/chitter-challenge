<!DOCTYPE HTML>
<html>
  <head>
    <title>Chirper</title>
  </head>

  <body>
    <% if flash[:welcome] %>
      <div id='welcome'><%= flash[:welcome] %></div>
    <% end %>

    <% if flash[:mismatch] %>
      <div id='mismatch'><%= flash[:mismatch] %></div>
    <% end %>

    <% if flash[:login_succesful] %>
      <div id='logged_in'><%= flash[:login_succesful] %></div>
    <% end %>

    <% if flash[:user_exists] %>
    <div id='user_exists'><%= flash[:user_exists] %></div>
  <% end %>
    <%= yield %>

  </body>
</html>
